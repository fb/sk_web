<%= content_tag :ul, :class=>local_assigns[:css_class] do %>
	<% menu.entries.select { |e| e.visible }.each { |entry| %>
		<%= content_tag :li, :class=>("children" if !entry.entries.empty?) do %>
			<%= content_tag :a, h(entry.text), :href=>entry.target %>
			<% if !entry.entries.empty? %>
				<%= render :partial=>'layouts/menu_entries', :locals=>{:menu=>entry} %>
			<% end %>
		<% end %>
	<% } %>
<% end %>
